{
  "name": "wfm2",
  "version": "0.0.1",
  "description": "A WFM2 PoC using the mediator pattern",
  "repository": "https://github.com/feedhenry-staff/wfm2-poc.git",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=2.0.0"
  },
  "main": "application.js",
  "scripts": {
    "start": "node application.js",
    "watch": "npm run watch-js & npm run livereload & npm run sass-watch & npm start",
    "build": "npm run build-js & npm run sass & npm run copy-css & npm run copy-fonts",
    "build-js": "browserify public/app/main.js > public/app/bundle.js",
    "watch-js": "watchify public/app/main.js -o public/app/bundle.js -dv --ignore-watch=\"!**/*.js|**/bundle.js|**/node_modules/**\"",
    "copy-css": "cp node_modules/patternfly/dist/css/patternfly.css public/css/",
    "copy-fonts": "cp -ar node_modules/patternfly/dist/fonts/ public/fonts/",
    "sass": "node-sass public/sass/portal.scss public/css/portal.css",
    "sass-watch": "nodemon -e scss -w public/sass -x 'npm run sass'",
    "livereload": "node scripts/livereload",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wfm"
  ],
  "author": "Brian Leathem",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.4.3",
    "angular-animate": "^1.4.3",
    "angular-timeago": "^0.2.0",
    "angular-ui-router": "^0.2.15",
    "async": "^1.4.2",
    "body-parser": "^1.13.3",
    "config-chain": "^1.1.9",
    "cors": "^2.7.1",
    "express": "^4.13.2",
    "fh-js-sdk": "git+https://github.com/feedhenry/fh-js-sdk.git",
    "fh-wfm-mediator": "~0.0.4",
    "fh-wfm-risk-assessment": "~0.0.1",
    "fh-wfm-vehicle-inspection": "~0.0.1",
    "fh-wfm-workflow": "~0.0.7",
    "fh-wfm-workorder": "~0.0.7",
    "lodash": "^3.10.1",
    "patternfly": "^1.3.0",
    "q": "^1.4.1"
  },
  "devDependencies": {
    "angular-sanitize": "^1.4.3",
    "browserify": "^11.0.1",
    "node-sass": "^3.2.0",
    "node-watch": "^0.3.4",
    "nodemon": "^1.4.0",
    "tiny-lr": "^0.1.6",
    "watchify": "^3.3.1"
  }
}
